package java8Practice;

import java.util.Arrays;
import java.util.List;

public class Alphabet {

	public String checkDigit(String word)
	{
		switch(word)
			{
				case "0": 
				{
					word = "zero"; 
					break;
					//return word;
				}
				
				case "1": 
				{
					word = "one";
					break;
					//return word;
				}
				
				case "2": 
				{
					word = "two";
					break;
					//return word;
				}
				
				case "3": 
				{
					word = "three"; 
					break;
					//return word;
				}
				case "4": 
				{
					word = "four"; 
					break;
					//return word;
				}
				case "5": 
				{
					word = "five"; 
					break;
					//return word;
				}
				case "6": 
				{
					word = "six"; 
					break;
					//return word;
				}
				case "7": 
				{
					word = "seven"; 
					break;
					//return word;
				}
				case "8": 
				{
					word = "eight"; 
					break;
					//return word;
				}
				case "9": 
				{
					word = "nine"; 
					break;
					//return word;
				}
				
			}
		return word;
	}
	
	public String checkFirstDig(String in)
	{
		String word = in; 
		switch(in)
		{
			
		case "1": 
		{
			//word = "one";
			break;
		}
		
		case "2": 
		{
			word = "twenty ";
			break;
		}
		
		case "3": 
		{
			word = "thirty "; 
			break;
		}
		case "4": 
		{
			word = "fourty "; 
			break;
		}
		case "5": 
		{
			word = "fifty "; 
			break;
		}
		case "6": 
		{
			word = "sixty "; 
			break;
		}
		case "7": 
		{
			word = "seventy "; 
			break;
		}
		case "8": 
		{
			word = "eighty "; 
			break;
		}
		case "9": 
		{
			word = "ninety "; 
			break;
		}
		
	}
return word;
		
	}
	
	
	public void organise(Integer [] input)
	{
		List<Integer> inputStrings = Arrays.asList(input);
		
		inputStrings.stream().map((num) -> 
									{
										String word = String.valueOf(num);
										//System.out.println(word);
										if(word.length() == 1)
										{ 
											String endResult = checkDigit(word);
											return endResult;
											//System.out.println(checkDigit(word));
										}
										if(word.length() == 2)
										{
											String firstDig = String.valueOf(word.charAt(0)); 
											
											String endResult = checkFirstDig(firstDig) + checkDigit(String.valueOf(word.charAt(1)));
											return endResult; 
										}
										return word; 
									}
								).forEach(System.out::println);;
	}
}
